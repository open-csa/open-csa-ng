{
    "name": "open-csa-ng",
    "scripts": {},
    "env": {
	"CSA_ENVIRONMENT": "development",
	"DJANGO_SECRET_KEY": "not-the-production-secret",
	"DATABASE_URL": {
	    "required": true
	},
	"SENDGRID_USERNAME": {
	    "required": true
	},
	"SENDGRID_PASSWORD": {
	    "required": true
	},
	"DISABLE_COLLECTSTATIC": {
	    "required": true
	}
    },
    "formation": {
	"web": {
	    "quantity": 1
	}
    },
    "addons": [
	"heroku-postgresql",
	"sendgrid"
    ],
    "buildpacks": [
	{
	    "url": "https://github.com/heroku/heroku-buildpack-python.git"
	}
    ]
}
